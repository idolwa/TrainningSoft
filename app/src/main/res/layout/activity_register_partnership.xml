<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RegisterPartnershipActivity">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_bg" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:layout_marginTop="0dp" android:layout_marginStart="0dp">

        <LinearLayout
                android:id="@+id/partnersip_register_layout"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <View    android:layout_gravity="center_vertical|center_horizontal"
                     android:layout_width="match_parent"
                     android:layout_height="85dp"/>

            <!-- REGISTER PArtner PANEL -->
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp">

                <!-- #ICON LAYOUT# -->
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blue_left_corner_bg">

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_horizontal|center_vertical">
                        <ImageView
                                android:src="@drawable/school"
                                android:scaleType="fitCenter"
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>
                    </LinearLayout>
                    <!-- icon Border fullname -->
                    <LinearLayout
                            android:orientation="vertical"
                            android:background="#6abcec"
                            android:layout_width="match_parent"
                            android:layout_height="1dp">
                    </LinearLayout>

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_horizontal|center_vertical">
                        <ImageView
                                android:src="@drawable/organisation"
                                android:scaleType="fitCenter"
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>
                    </LinearLayout>
                    <!-- icon Border option -->
                    <LinearLayout
                            android:orientation="vertical"
                            android:background="#6abcec"
                            android:layout_width="match_parent"
                            android:layout_height="1dp">
                    </LinearLayout>

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_horizontal|center_vertical">
                        <ImageView
                                android:src="@drawable/promotion"
                                android:scaleType="fitCenter"
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:background="#6abcec"
                            android:layout_width="match_parent"
                            android:layout_height="1dp">
                    </LinearLayout>

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_horizontal|center_vertical">
                        <ImageView
                                android:src="@drawable/promotion"
                                android:scaleType="fitCenter"
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>
                    </LinearLayout>
                    <!-- icon Border promotion-->
                    <LinearLayout
                            android:orientation="vertical"
                            android:background="#6abcec"
                            android:layout_width="match_parent"
                            android:layout_height="1dp">
                    </LinearLayout>

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_horizontal|center_vertical">
                        <ImageView
                                android:src="@drawable/number"
                                android:scaleType="fitCenter"
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>
                    </LinearLayout>


                </LinearLayout>
                <!-- #EDIT TEXT LAYOUT# -->
                <LinearLayout
                        android:background="@drawable/white_right_corner_bg"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent">

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="60dp">
                        <TextView
                                android:layout_marginVertical="20dp"
                                android:textAlignment="textStart"
                                android:text="  School"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"/>
                        <Spinner
                                android:id="@+id/sp_school"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="16dp"

                                android:spinnerMode="dialog">
                        </Spinner>
                    </LinearLayout>
                    <!-- Text Border fullname -->
                    <LinearLayout
                            android:orientation="vertical"
                            android:background="#6abcec"
                            android:layout_width="match_parent"
                            android:layout_height="1dp">
                    </LinearLayout>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="60dp">
                        <TextView
                                android:layout_marginVertical="20dp"
                                android:textAlignment="center"
                                android:text="Organization"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"/>
                        <Spinner
                                android:id="@+id/sp_organization"
                                android:layout_marginLeft="2dp"
                                android:layout_marginRight="2dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="16dp"

                                android:spinnerMode="dialog">
                        </Spinner>
                        <!--
                           <EditText
                                   android:id="@+id/option"
                                   android:hint="Option"
                                   android:layout_marginLeft="10dp"
                                   android:layout_marginRight="10dp"
                                   android:layout_width="match_parent"
                                   android:layout_height="match_parent"
                                   android:textSize="16dp"
                                   android:inputType="textPersonName"
                                   android:background="@android:color/transparent"/>
                                   -->
                    </LinearLayout>
                    <!-- Text Border option -->
                    <LinearLayout
                            android:orientation="vertical"
                            android:background="#6abcec"
                            android:layout_width="match_parent"
                            android:layout_height="1dp">
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="60dp">
                        <TextView
                                android:layout_marginVertical="20dp"
                                android:textAlignment="center"
                                android:text="Start date"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"/>
                        <EditText
                                android:id="@+id/start_date"
                                android:inputType="date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>

                    </LinearLayout>

                    <!-- Text Border Promotion -->
                    <LinearLayout
                            android:orientation="vertical"
                            android:background="#6abcec"
                            android:layout_width="match_parent"
                            android:layout_height="1dp">
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="60dp">
                     <TextView
                                android:layout_marginVertical="20dp"
                                android:textAlignment="center"
                                android:text="Start date"
                                android:layout_width="100dp"
                                android:layout_height="match_parent"/>

                        <EditText
                                android:id="@+id/end_date"
                                android:inputType="date"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                        <!--
                        <EditText
                                android:id="@+id/school"
                                android:hint="School"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="16dp"
                                android:inputType="textPersonName"
                                android:background="@android:color/transparent"/>
                                -->
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:background="#6abcec"
                            android:layout_width="match_parent"
                            android:layout_height="1dp">
                    </LinearLayout>

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="60dp">
                        <EditText
                                android:id="@+id/txt_number"
                                android:hint="Numbers"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="16dp"
                                android:inputType="number"
                                android:background="@android:color/transparent"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
            <!-- Button -->
            <Button
                    android:id="@+id/btn_new_partenership"
                    style="@android:style/TextAppearance.Small"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="12dp"
                    android:text="save"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/blue_button_bg"/>

            <!--Register form-->
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Clic ! to  "
                        android:textSize="12sp"
                        android:textColor="#80ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:text="return"
                        android:paddingLeft="50dp"
                        android:id="@+id/txt_return"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>


</RelativeLayout>