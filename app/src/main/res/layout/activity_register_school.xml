<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".registerSchool">
    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/gradient_bg" android:layout_alignParentStart="true"
            android:layout_alignParentTop="true" android:layout_marginTop="0dp" android:layout_marginStart="0dp">
        <LinearLayout
                android:id="@+id/school_register_form"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <View android:layout_gravity="center_vertical|center_horizontal"
                  android:layout_width="match_parent"
                  android:layout_height="150dp"/>
            <!-- login panel -->
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="20dp">

                <!-- icon layout -->
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blue_left_corner_bg"
                >
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_horizontal|center_vertical"
                    >
                        <ImageView
                                android:src="@drawable/school"
                                android:scaleType="fitCenter"
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>
                    </LinearLayout>

                    <!-- Button Border -->
                    <LinearLayout
                            android:orientation="vertical"
                            android:background="#6abcec"
                            android:layout_width="match_parent"
                            android:layout_height="1dp">
                    </LinearLayout>

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_horizontal|center_vertical"
                    >
                        <ImageView
                                android:src="@drawable/rccm"
                                android:scaleType="fitCenter"
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:background="#6abcec"
                            android:layout_width="match_parent"
                            android:layout_height="1dp">
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:gravity="center_horizontal|center_vertical"
                    >
                        <ImageView
                                android:src="@drawable/adress"
                                android:scaleType="fitCenter"
                                android:layout_width="40dp"
                                android:layout_height="40dp"/>
                    </LinearLayout>

                </LinearLayout>

                <!--  Edit text layout -->
                <LinearLayout
                        android:background="@drawable/white_right_corner_bg"
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="match_parent">
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="60dp">
                        <EditText
                                android:id="@+id/txt_school"
                                android:hint="School"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="16dp"
                                android:inputType="text"
                                android:background="@android:color/transparent"/>
                    </LinearLayout>

                    <!-- Text Border -->
                    <LinearLayout
                            android:orientation="vertical"
                            android:background="#6abcec"
                            android:layout_width="match_parent"
                            android:layout_height="1dp">
                    </LinearLayout>

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="60dp">
                        <EditText
                                android:id="@+id/txt_rccm"
                                android:hint="RCCM"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="16dp"
                                android:inputType="textPersonName"
                                android:background="@android:color/transparent"/>
                    </LinearLayout>

                    <!-- Text Border -->
                    <LinearLayout
                            android:orientation="vertical"
                            android:background="#6abcec"
                            android:layout_width="match_parent"
                            android:layout_height="1dp">
                    </LinearLayout>

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="60dp">
                        <EditText
                                android:id="@+id/txt_address"
                                android:hint="Address"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="16dp"
                                android:inputType="textPostalAddress"
                                android:background="@android:color/transparent"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>
            <!-- Button -->
            <Button
                    android:id="@+id/btn_addSchool"
                    style="@android:style/TextAppearance.Small"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginTop="16dp"
                    android:text="Save    "
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/blue_button_bg"/>
            <!--Register form-->
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_marginTop="40dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                <TextView
                        android:text="Return"
                        android:textSize="12sp"
                        android:textColor="#80ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:text="Click here"
                        android:paddingLeft="12dp"
                        android:id="@+id/txt_return"
                        android:textSize="12sp"
                        android:textColor="#ffffff"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>